{% comment %} <section class="home-section-2" style="background-image: url('{{ section.settings.background_image | img_url: 'large' }}');">
              <div class="home-section">
                <div class="container">
                  <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                      <div class="text-column">
                        <h2>{{ section.settings.title }}</h2>
                        <p>{{ section.settings.intro_text }}</p>
                        <form>
                          <label for="location">Location:</label>
                          <input
                            type="text"
                            id="location"
                            name="location"
                            placeholder="{{ section.settings.location_placeholder }}">
                          <button type="submit">Pickup</button>
                        </form>
                      </div>
                    </div>
            
                    <div class="col-md-6">
                      <div class="image-column">
                        <img
                          src="{{ section.settings.image | img_url: 'large' }}"
                          alt="{{ section.settings.image }} "
                          width="auto"
                          height="auto">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
</section> {% endcomment %}
<section class="banner" style="background-image: url('{{ section.settings.background_image | img_url: 'large' }}');">
  <div class="container container_large">
    <div class="row justify-content-between align-items-center">
      <div class="col-xxl-6 col-lg-6 col-xl-6 col-md-9">
        <div class="banner_text wow fadeInUp">
          <h5>{{ section.settings.title }}</h5>
          <h1>{{ section.settings.intro_text }}</h1>
          <p>{{ section.settings.description }}</p>
          <form>
            <input type="text" placeholder="Enter Your Location">
            <div class="banner_btn_area d-flex flex-wrap align-items-center">
              <button class="common_btn" type="submit">{{ section.settings.pickup_button_text }}</button>
              <span>or</span>
              <button class="common_btn" type="submit">{{ section.settings.delivery_button_text }}</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-xxl-5 col-lg-6 col-xl-6">
        <div class="banner_img wow fadeInRight">
          <div class="img">
            <img
              src="{{ section.settings.banner_image | img_url: 'large' }}"
              alt="banner"
              width="auto"
              height="auto">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Home SSection",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Welcome to Our Store"
      },

      {
        "type": "text",
        "id": "intro_text",
        "label": "Introductory Text",
        "default": "This is some introductory text about our store."
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "Commodo ullamcorper a lacus vestibulum sed arcu non. Non blandit massa enim Sem viverra aliquet eget sit amet tellus cras</p> dynami and give schema code"
      }, {
        "type": "text",
        "id": "pickup_button_text",
        "label": "Picup"
      }, {
        "type": "text",
        "id": "delivery_button_text",
        "label": "Delivery"
      }
    ],
    "presets": [
      {
        "category": "Custom",
        "name": "Home SSection"
      }
    ]
  }

{% endschema %}