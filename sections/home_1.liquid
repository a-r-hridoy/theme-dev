<section class="home">
  <div class="home-section">
    <div class="container">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6">
          <div class="text-column">
            <h2>{{ section.settings.title }}</h2>
            <p>{{ section.settings.intro_text }}</p>
            <form>
              <label for="location">Location:</label>
              <input
                type="text"
                id="location"
                name="location"
                placeholder="Enter your location...">
              <button type="submit">Pickup</button>
            </form>
          </div>

        </div>
        <div class="col-md-6">
          <div class="image-column">
            <img
              src="{{ section.settings.image | img_url: 'large' }}"
              alt="{{ section.settings.image }} "
              width="auto"
              height="auto">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="d-flex justify-content-center align-items-center py-6 md:justify-content-start md:space-x-10">
      <div class="d-flex justify content-center lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">
          {{ shop.name }}
        </h1>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Home",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      }, {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Welcome to Our Store"
      }, {
        "type": "text",
        "id": "intro_text",
        "label": "Introductory Text",
        "default": "This is some introductory text about our store."
      }
    ],
    "blocks": [
      {
        "type": "form",
        "name": "Pickup Form",
        "settings": [
          {
            "type": "text",
            "id": "location_label",
            "label": "Location Label",
            "default": "Location:"
          }, {
            "type": "text",
            "id": "location_placeholder",
            "label": "Location Placeholder",
            "default": "Enter your location..."
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Pickup"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Custom",
        "name": "Home Section"
      }
    ]
  }

{% endschema %}