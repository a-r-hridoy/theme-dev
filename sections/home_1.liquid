<section class="home">
  <div class="home-section">
    <div class="container">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6">
          <div class="text-column">
            <h2>{{ section.settings.title }}</h2>
            <p>{{ section.settings.intro_text }}</p>
            <form>
              <label for="location">Location:</label>
              <input
                type="text"
                id="location"
                name="location"
                placeholder="Enter your location...">
              <button type="submit">Pickup</button>
            </form>
          </div>

        </div>
        <div class="col-md-6">
          <div class="image-column">
            <img
              src="{{ section.settings.image | img_url: 'large' }}"
              alt="{{ section.settings.image }} "
              width="auto"
              height="auto">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="d-flex justify-content-center align-items-center py-6 md:justify-content-start md:space-x-10">
      <div class="d-flex justify content-center lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">
          {{ shop.name }}
        </h1>
      </div>
      <div class="hidden md:flex space-x-10">
        {% for link in section.settings.menu.links %}
          {% if link.links != blank %}
            <div class="relative">
              <button class="inline-flex items-center">
                {{ link.title }}
                {% render 'icon_dropdown' %}
              </button>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-700">{{ link.title }}</a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigation Menu"
      }
    ]
  }

{% endschema %}